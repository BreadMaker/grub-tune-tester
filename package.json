{
  "name": "grub-tune-tester",
  "version": "0.7.3",
  "description": "A GRUB_INIT_TUNE online tester.",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:BreadMaker/grub-tune-tester.git"
  },
  "scripts": {
    "lint": "eslint src/js/main.js --fix",
    "build:css": "cleancss -O1 specialComments:0 -O2 restructureRules:on -o css/main.min.css src/css/main.css",
    "watch:css": "watch 'npm run build:css' src/css/",
    "prebuild:js": "npm run lint",
    "build:js": "terser src/js/main.js --mangle -o js/main.min.js --comments --ie8 --source-map \"filename='js/main.min.js.map', root='/', url='main.min.js.map'\"",
    "watch:js": "watch 'npm run build:js' src/js/",
    "build:html": "html-minifier-next --remove-comments --collapse-whitespace --minify-css --minify-js < src/html/index.html > index.html",
    "watch:html": "watch 'npm run build:html' src/html/",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:watch": "run-p watch:**"
  },
  "author": "BreadMaker",
  "license": "GPL-3.0",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "eslint": "^9.36.0",
    "html-minifier-next": "^2.1.5",
    "npm-run-all": "^4.1.5",
    "terser": "^5.44.0",
    "watch": "^0.13.0"
  }
}
